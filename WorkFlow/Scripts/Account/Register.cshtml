@model WorkFlow.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Если Вы регистрируетесь от лица компании, нажмите кнопку "Компания". Если Вы представляете самого себя, нажмите кнопку "Работник".</h4>
    <hr />

    <div class="form-group">
        <span class="col-md-offset-2 col-md-10">
            <input type="button" class="btn btn-default" value="Компания" onclick="window.location.href='@Url.Action("RegisterCompany", "AccountController" )';"/>
        </span>
        <span class="col-md-offset-2 col-md-10">
            <input type="button" class="btn btn-default" value="Работник" onclick="window.location.href='@Url.Action("RegisterWorker", "AccountController")';" />
        </span>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
