</nav>
<table class="table table-hover ">
    <caption>Companies</caption>
    <thead>
        <tr>
            <th>Название компании</th>
            <th>Город</th>
            <th>E-mail</th>
            <th>Адрес</th>
            <th>Телефон</th>
            <th>Сайт</th>
            <th>Форма собственности</th>
            <th>Дата создания</th>
        </tr>
    </thead>
    <tbody>
        @{foreach (var a in Model.Companies)
        {
            <tr>
                <td>@a.Name</td>
                <td>@a.City</td>
                <td>@a.Email</td>
                <td>@a.Address</td>
                <td>@a.Phone</td>
                <td>@a.Website</td>
                <td>@a.PropertyForm</td>
                <td>@a.CreatingDate.Value.Date</td>
            </tr>
        }
        }
    </tbody>
</table>



