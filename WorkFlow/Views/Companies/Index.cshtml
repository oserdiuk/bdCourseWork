@model WorkFlow.Models.DataBaseModels.DBContext
@using WorkFlow.Controllers;

@{
    ViewBag.Title = "Компании";
    ViewBag.FilterCompanySucceed = false;
}
<script src="~/Scripts/MicrosoftMvcAjax.js" type="text/javascript"></script>


@section scripts{
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")
}
<div style="background-color:#5C8D94" class="navbar-collapse collapse navbar-responsive-collapse">

</div>
<nav class="navbar navbar-default-secondnavbar" style="margin-top: 10px">
    <div class="container-fluid">


        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="glyphicon glyphicon-sort" style="margin-right: 7px"></i>Сортировка<span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">


                        <li> @Ajax.ActionLink("По алфавиту (по возрастанию)", "UpdateTable", "Database", new { context = Model, actionNumber = ActionWithTable.Sort, tableName = "Companies", fieldToSort = "Name" }, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divResponse", InsertionMode = InsertionMode.Replace })</li>
                        <li> @Ajax.ActionLink("По алфавиту (по убыванию)", "UpdateTable", "Database", new { context = Model, actionNumber = ActionWithTable.SortDesc, tableName = "Companies", fieldToSort = "Name" }, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divResponse", InsertionMode = InsertionMode.Replace })</li>

                        <li class="divider"></li>

                        <li> @Ajax.ActionLink("По дате создания компании (по возрастанию)", "UpdateTable", "Database", new { context = Model, actionNumber = ActionWithTable.Sort, tableName = "Companies", fieldToSort = "CreatingDate" }, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divResponse", InsertionMode = InsertionMode.Replace })</li>
                        <li> @Ajax.ActionLink("По дате создания компании (по убыванию)", "UpdateTable", "Database", new { context = Model, actionNumber = ActionWithTable.SortDesc, tableName = "Companies", fieldToSort = "CreatingDate" }, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divResponse", InsertionMode = InsertionMode.Replace })</li>
                    </ul>
                </li>


                @Html.Partial("_CompaniesFilterFormPartial", new WorkFlow.Models.CompanyFilter())


                <li> @Ajax.ActionLink("Statistics", "Statistics", "Companies", new { context = Model, actionNumber = ActionWithTable.Sort, tableName = "Companies", fieldToSort = "Name" }, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divResponse", InsertionMode = InsertionMode.Replace })</li>


            </ul>




            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" data-toggle="collapse" data-target="#toCollapse" role="button" aria-expanded="false"><i class="glyphicon glyphicon-search" style="margin-right: 7px"></i>  Search...  <span class="caret"></span></a>

                </li>
            </ul>


        </div>
    </div>
</nav>

<div id="toCollapse" class="collapse col-md-12">

    @Html.Partial("~/Views/Search/_SearchCompanyPartial.cshtml", new WorkFlow.Models.SearchCompanyCriteria())

</div>


<div id="divResponse">
    @Html.Partial("_CompaniesListPartial", Model)
</div>
